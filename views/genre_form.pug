extends layout 

block content
    h1=title 
        form(method="POST")
            .form-group 
                label(for='name') Genre Name: 
                input#name.form-control(type='text', placeholder='Rock, Pop music, Jazz etc.' name='name' required value=(undefined===genre ? '' : genre.name) )
            button.btn.btn-primary(type='submit') Submit
        if errors 
            ul
            each err in errors 
                li=err.msg

